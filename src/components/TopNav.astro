---
import MobileNav from "./MobileNav.astro";
const { pathname } = Astro.url;
---

<header>
  <nav>
    <ul>
      <li>
        <a href="/">
          <button class={pathname === "/" ? "active" : ""}>Home</button>
        </a>
      </li>
      <li>
        <a href="/about">
          <button class={pathname === "/about" ? "active" : ""}>About</button>
        </a>
      </li>
      <li>
        <a href="/contact">
          <button class={pathname === "/contact" ? "active" : ""}
            >Contact</button
          ></a
        >
      </li>
    </ul>
  </nav>
  <MobileNav />
</header>

<style>
  nav {
    display: none;
  }

  ul {
    list-style: none;
    display: flex;
    gap: 1rem;
    margin: 0;
    padding: 0;
  }

  li {
    margin: 0;
  }

  button.active {
    background-color: var(--pico-primary-hover-background);
    font-weight: bold;
  }

  /* Styles for screens wider than 768px (tablets and up) */
  @media screen and (min-width: 768px) {
    nav {
      display: block;
    }
  }
</style>
